programa {
  funcao inicio() {
    real metros, centimetros, milimetros, quilometros

     escreva("Digite a quantidade de metros: ")
    leia(metros)

    centimetros = (metros * 100)

    escreva("O valor em centímetros é: ", centimetros)

    milimetros = (metros * 1000)

    escreva(" \n O valor em milímetros é: ", milimetros)

     quilometros = (metros / 1000)

    escreva(" \n O valor em quilômetros é: ", quilometros)
    

    
  
  
  }
}
